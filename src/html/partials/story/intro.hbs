<div class='intro'>
	<h1 class='intro__hed'>{{meta.title1}}</h1>
	<h1 class='intro__hed accent'>{{meta.title2}}</h1>
	<h1 class='intro__hed'>{{meta.title3}}</h1>
	<p class='intro__byline'>By
		<a href='{{meta.author.url}}' target='_blank'>
			<strong>{{meta.author.name}}</strong>
		</a>
	</p>
	<p class='intro__illos'>Illustrations by
		<a href='http://arthurmount.com/' target='_blank'>
			Arthur Mount
		</a>
	</p>
	<!--<time class='intro__time'>Month 2019</time>-->
	{{#each doc.intro}}
    <p class='prose'>{{{value}}}</p>
  {{/each}}
</div>
