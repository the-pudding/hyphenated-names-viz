/* CUSTOM STORY STYLE */
.vignettes
	width 100%
	font-family $sans-display
	z-index set-index('top')

	.wrapper-line
		max-width 60rem
		padding 4rem 0 2rem 0
		margin 0 auto 0 auto
		border-left 3px solid $navy
		border-right 3px solid $navy

		h3
			color darken($navy, 0.9)
			margin 0 auto 2rem auto
			max-width $column-width
			text-align center
			font-family $anton
			text-transform uppercase
			set-type-size('x-large', true)

		ul
			margin 0 auto 6rem auto
			max-width $column-width
			padding 0 6rem
			color darken($navy, 0.9)
			font-family $sans

			li
				margin-bottom 1rem

				&::before
					content '\2022'
					color darken($navy, 0.9)
					font-weight 600
					display inline-block
					width 1em
					margin-left -1em

				span
					font-weight 600
					white-space nowrap
					padding 0 0.25rem
					background-repeat no-repeat
					transition background-position .08s ease-out
					background-image linear-gradient(180deg,transparent 0,$yellow 0)
					background-position 0 1em
					&:hover
						background-position 0 0em
						background-image linear-gradient(180deg,transparent 0,$orange 0)


	.athlete
		width 100%
		padding 0

		.name-container
			width 100%
			display flex
			z-index set-index('bottom')

			&__left, &__right
				width 50%
				text-transform uppercase
				font-weight 700
				padding 0
				display flex
				flex-direction row
				align-items center

			&__left
				justify-content flex-end
				width 50%
				background-color $orange
				text-align right
				transform translateX(-100%)
				transition transform 400ms ease-in-out

				&.entered
					transform translateX(0)
					transition transform 400ms ease-in-out

				.block__left
					height 1.5rem
					width 1.5rem
					background-color $white

			&__right
					background-color $navy
					text-align left
					transform translateX(100%)
					transition transform 400ms ease-in-out

					&.entered
						transform translateX(0)
						transition transform 400ms ease-in-out

					.block__right
						height 1.5rem
						width 1.5rem
						background-color $white

			.lastName
				text-transform uppercase
				margin 0
				font-family $anton
				//set-type-size(xxx-large, true)
				font-size 100px
				letter-spacing 0.125rem

				&__left
					color $navy
					padding-right 1rem

				&__right
						color $yellow
						padding-left 1rem

		&__body
			display flex
			max-width 60rem
			margin -11rem auto 0 auto
			z-index set-index('overlay')
			padding 12rem 5rem 10rem 5rem
			border-right 3px solid $navy
			border-left 3px solid $navy

			.img-container
				max-width 600px

			.deets-container
				width 100%
				padding 1rem
				margin-top 1rem

				&__text
					p
						color darken($navy, 0.9)
						margin 0
						padding 0
						font-family $sans

						a
							color darken($navy, 0.9)
							border-bottom 1px solid darken($navy, 0.9)
							&:hover
								color $orange

						span
							font-weight 700

					.deets__name
						font-family $anton
						text-transform uppercase
						set-type-size('x-large', true)

					.deets__category
						font-weight 600
						margin-bottom 1rem


#Rowland-Smith, #Green-Ellis, #Grand-Pierre
	.img-container
		order 2

	.deets-container
		order 1

