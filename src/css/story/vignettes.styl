/* CUSTOM STORY STYLE */
.vignettes
	width 100%
	font-family $sans-display
	z-index set-index('top')

	.wrapper-line
		max-width none
		width calc(100% - 2rem)
		padding 4rem 0 2rem 0
		margin 0 1rem
		border-left 3px solid $navy
		border-right 3px solid $navy
		+mq('bp-7')
			margin 0 auto
			max-width 60rem

		h3
			color darken($navy, 0.9)
			margin 0 auto 2rem auto
			max-width $column-width
			text-align center
			font-family $anton
			text-transform uppercase
			set-type-size('x-large', true)

		ul
			margin 0 auto 4rem auto
			max-width $column-width
			padding 0 3rem
			color darken($navy, 0.9)
			font-family $sans
			+mq('bp-3')
				padding 0 4rem
				margin 0 auto 6rem auto
			+mq('bp-4')
				padding 0 6rem

			li
				margin-bottom 1rem

				&::before
					content '\2022'
					color darken($navy, 0.9)
					font-weight 600
					display inline-block
					width 1em
					margin-left -1em

				span
					font-weight 600
					cursor pointer
					white-space nowrap
					padding 0 0.25rem
					background-repeat no-repeat
					transition background-position .08s ease-out
					background-image linear-gradient(180deg,transparent 0,$yellow 0)
					background-position 0 1em
					&:hover
						background-position 0 0em
						background-image linear-gradient(180deg,transparent 0,$orange 0)


	.athlete
		width 100%
		padding 0

		.name-container
			width 100%
			display flex
			z-index set-index('bottom')

			&__left, &__right
				width 50%
				text-transform uppercase
				font-weight 700
				padding 0
				display flex
				flex-direction row
				align-items center

			&__left
				justify-content flex-end
				width 50%
				background-color $orange
				text-align right
				transform translateX(-100%)
				transition transform 400ms ease-in-out

				&.entered
					transform translateX(0)
					transition transform 400ms ease-in-out

				.block__left
					height 0.75rem
					width 0.75rem
					background-color $white
					+mq('bp-3')
						height 1rem
						width 1rem
					+mq('bp-4')
						height 1.5rem
						width 1.5rem

			&__right
					background-color $navy
					text-align left
					transform translateX(100%)
					transition transform 400ms ease-in-out

					&.entered
						transform translateX(0)
						transition transform 400ms ease-in-out

					.block__right
						height 0.75rem
						width 0.75rem
						background-color $white
						+mq('bp-3')
							height 1rem
							width 1rem
						+mq('bp-4')
							height 1.5rem
							width 1.5rem

			.lastName
				text-transform uppercase
				margin 0
				font-family $anton
				font-size 36px
				letter-spacing 0.125rem
				+mq('bp-3')
					font-size 48px
				+mq('bp-4')
					font-size 65px
				+mq('bp-5')
					font-size 80px
				+mq('bp-6')
					font-size 100px

				&__left
					color $navy
					padding-right 0.5rem
					+mq('bp-3')
						padding-right 1rem

				&__right
						color $yellow
						padding-left 0.5rem
						+mq('bp-3')
							padding-right 1rem

		&__body
			display flex
			flex-direction column
			max-width none
			width calc(100% - 2rem)
			margin -11rem 1rem 0 1rem
			z-index set-index('overlay')
			padding 12rem 0rem 6rem 0rem
			border-right 3px solid $navy
			border-left 3px solid $navy
			+mq('bp-4')
				padding 12rem 3rem 6rem 3rem
			+mq('bp-5')
				padding 12rem 5rem 6rem 5rem
				flex-direction row
			+mq('bp-7')
				max-width 60rem
				margin -11rem auto 0 auto

			.img-container
				max-width 400px
				margin 0 auto

			.deets-container
				width 100%
				padding 1rem
				margin-top 0
				+mq('bp-5')
					margin-top 1rem

				&__text
					p
						color darken($navy, 0.9)
						margin 0
						padding 0
						font-family $sans

						a
							color darken($navy, 0.9)
							border-bottom 1px solid darken($navy, 0.9)
							&:hover
								color $orange

						span
							font-weight 700

					.deets__name
						font-family $anton
						text-transform uppercase
						set-type-size('x-large', true)

					.deets__category
						font-weight 600
						margin-bottom 1rem


#Rowland-Smith, #Green-Ellis, #Grand-Pierre
	.img-container
		order 1
		+mq('bp-5')
			order 2

	.deets-container
		order 2
		+mq('bp-5')
			order 1

