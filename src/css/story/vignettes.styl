/* CUSTOM STORY STYLE */
.vignettes
	width 100%
	font-family $sans-display

	.wrapper-line
		max-width 60rem
		padding 4rem 0 2rem 0
		margin 0 auto 0 auto
		border-left 3px solid $navy
		border-right 3px solid $navy

		h3
			color darken($navy, 0.9)
			margin 0 auto 2rem auto
			max-width $column-width
			text-align center
			font-family $anton
			text-transform uppercase

	.athlete
		width 100%
		padding 0

		.name-container
			width 100%
			display flex
			z-index set-index('bottom')

			&__left, &__right
				width 50%
				text-transform uppercase
				font-weight 700
				padding 0
				display flex
				flex-direction row
				align-items center

			&__left
				justify-content flex-end
				width 50%
				background-color $orange
				text-align right
				transform translateX(-100%)
				transition transform 400ms ease-in-out

				&.entered
					transform translateX(0)
					transition transform 400ms ease-in-out

				.block__left
					height 1.5rem
					width 1.5rem
					background-color $white

			&__right
					background-color $navy
					text-align left
					transform translateX(100%)
					transition transform 400ms ease-in-out

					&.entered
						transform translateX(0)
						transition transform 400ms ease-in-out

					.block__right
						height 1.5rem
						width 1.5rem
						background-color $white

			.lastName
				text-transform uppercase
				margin 0
				font-family $anton
				//set-type-size(xxx-large, true)
				font-size 100px
				letter-spacing 0.125rem

				&__left
					color $navy
					padding-right 1rem

				&__right
						color $yellow
						padding-left 1rem

		&__body
			display flex
			max-width 60rem
			margin -11rem auto 0 auto
			z-index set-index('overlay')
			padding 12rem 5rem 10rem 5rem
			border-right 3px solid $navy
			border-left 3px solid $navy

			.img-container
				max-width 600px

			.deets-container
				width 100%
				padding 1rem
				margin-top 3rem

				&__text
					p
						margin 0
						padding 0

						span
							font-weight 700

#Rowland-Smith, #Green-Ellis, #Grand-Pierre
	.img-container
		order 2

	.deets-container
		order 1
