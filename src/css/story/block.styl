.block
	width 100%
	margin 0 auto 0 auto
	background-color $navy
	min-height 80vh
	position relative

	&__buttons
		position absolute
		z-index 998
		left 0
		top 25%
		padding 1rem 0.5rem
		//background-color rgba($white, 1)

		p
			color $white
			font-family $anton
			margin 0
			padding 0
			text-transform uppercase
			text-shadow 0px 0px 10px darken($navy, 0.9)

			&:hover
				color $yellow

			&.is-active
				color $yellow

	&__controls
		position sticky
		top 3rem
		z-index 999
		width 100%
		height 6rem
		border-bottom 1px solid $navy-light
		background-color darken($navy, 0.9)
		display flex
		justify-content space-between

		select
			appearance none
			width 6rem
			border none
			background url('assets/images/arrow.png') 100% / 18% no-repeat transparent
			font-family $anton
			color $white
			set-type-size('xx-large', true)
			text-transform uppercase
			border-bottom 1px solid $navy-light
			border-radius 0

			&:hover
				border-bottom 1px solid $yellow
				background url('assets/images/arrow-yellow.png') 100% / 18% no-repeat transparent

			&:focus
				outline none

			option
				background-color transparent

		.nums
			display flex
			padding 0.5rem 0 0 1rem
			flex-direction row
			align-items center
			color $navy-light
			font-family $sans-display

			p
				padding 0 0.25rem
				margin 0

			.leagueName, .decadeNum
				font-family $anton
				color $white
				set-type-size('xx-large', true)
				text-transform uppercase
				border-right 1px solid $navy-light
				padding-right 1rem

			.decadeNum
				padding-left 1rem
				text-transform none

			.hyphenCount, .totalCount
				font-family $anton
				color $yellow
				set-type-size('xx-large', true)

			.hyphenCount
				padding-left 1rem

			.percentCount
				font-family $anton
				color $light-navy
				set-type-size('xx-large', true)
				text-transform uppercase
				border-left 1px solid $navy-light
				padding-left 1rem
				margin-left 1rem

		.slider__wrapper
			width 20rem
			padding 0 1.5rem 0 0
			display flex
			align-items center
			margin-top -1rem

			.block__slider
				width calc(100% - 2rem)
				margin 0 auto

	figure
		width 100%
		padding 1rem
		position relative

		.tooltip
			position absolute
			background-color $white
			font-family $sans-display
			padding 0.5rem
			set-type-size('small', true)
			color darken($navy, 0.9)
			opacity 0
			border 2px solid darken($navy, 0.9)

			span
				font-weight 600

		.g-vis
			display flex
			flex-wrap wrap
			align-content space-between

			.name
				font-family $sans-display
				margin 0
				padding 0.125rem
				font-size 14px
				color $navy-light
				//set-type-size('xx-small', true)

				&__true
					color $yellow
					font-weight 600

.noUi-tooltip::after
	 display inline-block
	 content 's'
